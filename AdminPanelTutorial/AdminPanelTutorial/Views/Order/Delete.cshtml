@model AdminPanelTutorial.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<h1>@ViewData["Title"]</h1>

<h4>Are you sure you want to delete this order?</h4>

<div>
    <strong>Order Number:</strong> @Model.OrderNumber<br />
    <strong>Total Price:</strong> @Model.TotalPrice<br />
    <!-- You can add any other details of the order you want to display here -->
</div>

<!-- Form for DELETE confirmation -->
<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
</form>


