@model IEnumerable<AdminPanelTutorial.Models.Order>

@{
    ViewData["Title"] = "Orders List";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a href="@Url.Action("Create", "Order")" class="btn btn-primary">Create New Order</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Order Number</th>
            <th>Customer</th>
            <th>Cashier</th>
            <th>Total Price</th>
            <th>Payment Method</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderNumber</td>
                <td>@(order.Customer?.Name ?? "Walk-in")</td>
                <td>@order.User?.Name ?? "Unknown Cashier"</td>
                <td>@order.TotalPrice</td>  
                <td>@order.PaymentMethod</td>
                <td>@order.Status</td>
                <td>
                    <a href="@Url.Action("Details", "Order", new { id = order.Id })" class="btn btn-info">Details</a>
                    <a href="@Url.Action("Edit", "Order", new { id = order.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Order", new { id = order.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
