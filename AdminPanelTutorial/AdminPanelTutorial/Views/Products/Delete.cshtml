@model AdminPanelTutorial.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h1>Delete Product</h1>
<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">
            <strong>Description:</strong> @Model.Description <br />
            <strong>SKU:</strong> @Model.SKU <br />
            <strong>Barcode:</strong> @Model.Barcode <br />
            <strong>Price:</strong> $@Model.Price <br />
            <strong>Cost Price:</strong> $@Model.CostPrice <br />
            <strong>Quantity in Stock:</strong> @Model.QuantityInStock <br />
            <strong>Category:</strong> @Model.Category?.Name <br />
            <strong>Created At:</strong> @Model.CreatedAt <br />
            <strong>Updated At:</strong> @Model.UpdatedAt
        </p>
       
    </div>
</div>

<div class="alert alert-danger">
    Are you sure you want to delete the product <strong>@Model.Name</strong>?
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
