@model productVM

@{
    ViewData["Title"] = "Product Details";
}

<h1 class="mb-4">Product Details</h1>

<div class="card shadow-sm border-0">
    <div class="row g-0">
        @if (!string.IsNullOrEmpty(Model.Product.ImageUrl))
        {
            <div class="col-md-4">
                <img src="@Model.Product.ImageUrl" class="img-fluid rounded-start" alt="@Model.Product.Name" style="max-height: 300px; object-fit: contain;">
            </div>
        }
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title fw-bold">@Model.Product.Name</h5>
                <p class="card-text">
                    <strong>Description:</strong> @Model.Product.Description <br />
                    <strong>SKU:</strong> @Model.Product.SKU <br />
                    <strong>Barcode:</strong> @Model.Product.Barcode <br />
                    <strong>Price:</strong> $@Model.Product.Price <br />
                    <strong>Cost Price:</strong> $@Model.Product.CostPrice <br />
                    <strong>Quantity in Stock:</strong> @Model.Product.QuantityInStock <br />
                    <strong>Category:</strong> @Model.Product.Category?.Name <br />
                    <strong>Created At:</strong> @Model.Product.CreatedAt.ToString("yyyy-MM-dd HH:mm") <br />
                    <strong>Updated At:</strong> @Model.Product.UpdatedAt.ToString("yyyy-MM-dd HH:mm")
                </p>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
