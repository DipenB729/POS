@model AdminPanelTutorial.Models.User

<h2>Details of @Model.Name</h2>

<div>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Role:</strong> @Model.Role.Name</p>
</div>

<a href="@Url.Action("Index", "User")" class="btn btn-secondary">Back to Users</a>
<a href="@Url.Action("Edit", "User", new { id = Model.Id })" class="btn btn-primary">Edit</a>
<a href="@Url.Action("Delete", "User", new { id = Model.Id })" class="btn btn-danger">Delete</a>
