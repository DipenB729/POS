@model IEnumerable<Payment>

@{
    ViewData["Title"] = "Payments";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-primary">@ViewData["Title"]</h1>
        <a href="@Url.Action("Create", "OrderDetail")" class="btn btn-success">POS</a>
    </div>

    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Order Number</th>
                <th>Amount</th>
                <th>Payment Method</th>
                <th>Payment Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var payment in Model)
            {
                <tr>
                    <td>@payment.Id</td>
                    <td>@payment.Order.OrderNumber</td>
                    <td>@payment.Amount</td>
                    <td>@payment.PaymentMethod</td>
                    <td>@payment.PaymentDate</td>
                    <td>
                        <a href="@Url.Action("Detail", "Payments", new { id = payment.Id })" class="btn btn-info btn-sm">Details</a>
                        <a href="@Url.Action("Edit", "Payments", new { id = payment.Id })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("Delete", "Payments", new { id = payment.Id })" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a href="@Url.Action("Create", "Payments")" class="btn btn-success">Create New Payment</a>
    </div>
</div>
