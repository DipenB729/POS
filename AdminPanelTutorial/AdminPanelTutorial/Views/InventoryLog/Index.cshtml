@model IEnumerable<AdminPanelTutorial.Models.InventoryLog>

@{
    ViewBag.Title = "Inventory Logs";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">@ViewBag.Title</h2>

    <!-- Table Container -->
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Product</th>
                    <th>Quantity Changed</th>
                    <th>Change Type</th>
                    <th>Reason</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model)
                {
                    <tr>
                        <td>@log.Product.Name</td>
                        <td>@log.QuantityChanged</td>
                        <td>@log.ChangeType</td>
                        <td>@log.Reason</td>
                        <td>@log.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@log.UpdatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <a href="@Url.Action("Details", new { id = log.Id })" class="btn btn-info btn-sm">Details</a>
                            <a href="@Url.Action("Edit", new { id = log.Id })" class="btn btn-warning btn-sm">Edit</a>
                            <a href="@Url.Action("Delete", new { id = log.Id })" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Create New Inventory Button -->
    <div class="mb-3 text-right">
        <a href="@Url.Action("Create", "InventoryLog")" class="btn btn-success btn-lg">
            <i class="fas fa-plus-circle"></i> Create New Inventory
        </a>
    </div> 
</div>
