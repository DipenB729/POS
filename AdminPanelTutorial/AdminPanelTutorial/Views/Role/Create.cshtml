@model AdminPanelTutorial.ViewModels.RoleViewModel

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label>Select Permissions</label>
        <div>
            @if (ViewBag.Permissions != null)
            {
                foreach (var permission in ViewBag.Permissions)
                {
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="permission-@permission.Id" name="selectedPermissions" value="@permission.Id" />
                        <label class="form-check-label" for="permission-@permission.Id">@permission.Name</label>
                    </div>
                }
            }
            else
            {
                <p>No permissions available.</p>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
