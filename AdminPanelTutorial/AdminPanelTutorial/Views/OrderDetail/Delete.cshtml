@model OrderDetail

@{
    ViewData["Title"] = "Delete Order Detail";
}

<h2>Delete Order Detail</h2>

<h3>Are you sure you want to delete this order detail?</h3>

<div>
    <h4>Order Detail</h4>
    <dl class="dl-horizontal">
        <dt>Order</dt>
        <dd>@Model.OrderId</dd>
        <dt>Product</dt>
        <dd>@Model.ProductId</dd>
        <dt>Quantity</dt>
        <dd>@Model.Quantity</dd>
        <dt>Price</dt>
        <dd>@Model.Price</dd>
        <dt>Total Price</dt>
        <dd>@Model.TotalPrice</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
