@model OrderDetail

@{
    ViewData["Title"] = "Delete Order Detail";
}

<h3>Are you sure you want to delete this Order Detail?</h3>

<div>
    <h4>Order Detail</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Order ID</dt>
        <dd class="col-sm-10">@Model.OrderId</dd>

        <dt class="col-sm-2">Product Name</dt>
        <dd class="col-sm-10">@Model.Product.Name</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">Rs. @Model.Price</dd>

        <dt class="col-sm-2">Total Price</dt>
        <dd class="col-sm-10">Rs. @Model.TotalPrice</dd>
    </dl>
</div>

<form method="post">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
